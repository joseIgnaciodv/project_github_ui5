<mvc:View controllerName="projectgithubui5.controller.Main" xmlns:mvc="sap.ui.core.mvc" xmlns:core="sap.ui.core" displayBlock="true" xmlns="sap.m">
    <Page id="page" title="{i18n>title}">
        <FlexBox id="_IDGenFlexBox1" height="60px" width="100%" justifyContent="Center">
            <Input id="user" placeholder="Buscar usuario" width="250px" class="sapUiSmallMarginEnd">
            </Input>
            <Button id="_IDGenButton1" text="Buscar" iconFirst="true" icon="sap-icon://search" press="getUser" />
        </FlexBox>

        <VBox id="_IDGenVBox1" width="100%" alignItems="Center" visible="false" >
            <HBox id="_IDGenHBox1" justifyContent="SpaceBetween" alignItems="Center" height="60px" width="300px" class="option">
                <Text id="_IDGenText1" text="Repositorios" class="sapUiSmallMarginBegin"></Text>
                <Button id="_IDGenButton2" icon="sap-icon://arrow-right" class="sapUiSmallMarginEnd" press="navigateTo"></Button>
            </HBox>

            <HBox id="_IDGenHBox2" justifyContent="SpaceBetween" alignItems="Center" height="60px" width="300px" class="option">
                <Text id="_IDGenText2" text="Organizaciones" class="sapUiSmallMarginBegin"></Text>
                 <Button id="_IDGenButton3" icon="sap-icon://arrow-right" class="sapUiSmallMarginEnd" press="navigateOrgs"></Button>
            </HBox>
        </VBox>
        <content />
    </Page>
</mvc:View>
